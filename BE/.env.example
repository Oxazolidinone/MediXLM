# Application
APP_NAME=MediXLM
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/medixlm
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Cache (Upstash Cloud)
REDIS_URL=rediss://default:your_upstash_password@your-redis.upstash.io:6379
REDIS_MAX_CONNECTIONS=50

# Neo4j Knowledge Graph (Aura Cloud)
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_aura_password

# Milvus Vector Database (Cloud)
MILVUS_URI=https://your-instance.api.gcp-us-west1.zillizcloud.com
MILVUS_TOKEN=your_milvus_cloud_token
MILVUS_COLLECTION_NAME=medical_knowledge
EMBEDDING_DIMENSION=384

# LLM Service
LLM_API_URL=http://localhost:5000/generate
LLM_API_KEY=your_llm_api_key
LLM_MODEL_NAME=medixlm-llm-model
LLM_TIMEOUT=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
